<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".Activities.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="28dp">

        <fragment
            android:id="@+id/videoListFragment"
            android:name="jonburney.version7.kingsgatemediaplayer.Fragments.VideoListFragment"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/videoPreviewiew"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:paddingLeft="40dp">

                <TextView
                    android:id="@+id/videoPreviewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Power of Everyone Devoted"
                    android:textSize="20dp"/>


                <ImageView
                    android:id="@+id/videoPreviewThumbnail"
                    android:layout_width="600dp"
                    android:layout_height="240dp"
                    android:src="@drawable/thumbnail"
                    android:layout_gravity="fill_vertical"
                    android:layout_below="@+id/videoPreviewTitle"
                    android:scaleType="fitStart"/>


                <TextView
                    android:id="@+id/videoPreviewDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senior Pastor Deve Smith brings us Part 1 of our series 'The Power of Everyone'"
                    android:layout_below="@+id/videoPreviewThumbnail"/>


                <TextView
                    android:id="@+id/videoPreviewDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: 42mins'"
                    android:layout_below="@+id/videoPreviewDescription"/>

                <Button
                    android:id="@+id/videoPreviewPlayButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/videoPreviewDuration"
                    android:text="Play Video"
                    android:layout_marginTop="5dp"
                    />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>